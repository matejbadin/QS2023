&control
  calculation  = 'carbon-graphene-nscf',
  prefix       = 'carbon-graphene',
  outdir       = 'carbon-graphene-outdir',
  pseudo_dir   = '../PP/'
  disk_io      = 'low'
  tstress      = .true.
  tprnfor      = .true.
  verbosity    = 'low'
/
&system
    ibrav     = 4,
    celldm(1) = 4.654,
    celldm(3) = 3.0,
    nat       = 2,
    ntyp      = 1,
    ecutwfc   = 45.0,
    ecutrho   = 360.0,
    occupations = 'smearing',
    smearing = 'gaussian',
    degauss = 0.01,
/
&electrons
    conv_thr    = 1.0d-8
    mixing_beta = 0.7
/
ATOMIC_SPECIES
   C  12.0107 C.rvv10-n-kjpaw_psl.1.0.0.UPF
ATOMIC_POSITIONS alat
   C    0.000000    0.0000000   0.000000
   C    0.000000    0.5773503   0.000000
K_POINTS automatic
   18 18 2   0 0 0

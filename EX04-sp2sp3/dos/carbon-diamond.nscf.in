&control
  calculation  = 'nscf',
  prefix       = 'carbon-diamond',
  outdir       = 'carbon-diamond-outdir',
  pseudo_dir   = '../PP/'
  disk_io      = 'low'
  tstress      = .false.
  tprnfor      = .false.
  verbosity    = 'low'
/
&system
    ibrav     = 2,
    celldm(1) = 6.515,
    nat       = 2,
    ntyp      = 1,
    ecutwfc   = 50,
    occupations = 'smearing',
    smearing = 'gaussian',
    degauss = 0.01,
 /
 &electrons
    diagonalization = 'david'
    mixing_mode     = 'plain'
    mixing_beta     = 0.7
    conv_thr        = 1.0d-8
 /
